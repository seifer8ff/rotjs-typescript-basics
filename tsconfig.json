{
    "compilerOptions": {
        
        "target": "es2022",
        "module": "es2022",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "allowJs": true,
        "strict": false,
        "lib": [
            "dom",
            "es2015"
        ],
        "outDir": "./dist",
    },
    "include": [
        "src/*",
    ],
    "exclude": [
        "./dist/**/*"
    ]
}